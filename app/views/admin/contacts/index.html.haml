%div.contacts

  %h1.text-2xl Contacten
  %hr

  %div.contact-list
    %div.contact
      %div.contacted-at
        %strong Gecontacteerd op
      %div.email
        %strong Email
      %div.phone
        %strong Telefoon
      %div.address
        %strong Address
      %div.message
        %strong Bericht
    - @contacts.each do |contact|
      %div.contact
        %div.contacted-at= "#{contact.contacted_at}"
        %div.email
          = link_to "#{contact.email}", "mailto:#{contact.email}"
        %div.phone= "#{contact.phone}"
        %div.address= "#{contact.address}"
        %div.message= "#{contact.message}"
